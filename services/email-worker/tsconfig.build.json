{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "types": ["node"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es2022",
    "lib": ["es2022"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@task-management/messaging": ["../../libs/shared/messaging/src/index.ts"],
      "@task-management/metrics": ["../../libs/shared/metrics/src/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../libs/shared/messaging/src/**/*.ts",
    "../../libs/shared/metrics/src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "references": [
    {
      "path": "../../libs/shared/metrics"
    },
    {
      "path": "../../libs/shared/messaging/tsconfig.lib.json"
    }
  ]
}

