{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "types": ["node"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es2022",
    "lib": ["es2022"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@task-management/shared-types": ["../../libs/shared/types/src/index.ts"],
      "@task-management/database": ["../../libs/shared/database/src/index.ts"],
      "@task-management/cache": ["../../libs/shared/cache/src/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../libs/shared/types/src/**/*.ts",
    "../../libs/shared/database/src/**/*.ts",
    "../../libs/shared/cache/src/**/*.ts"
  ],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "references": [
    {
      "path": "../../libs/shared/database"
    },
    {
      "path": "../../libs/shared/cache/tsconfig.lib.json"
    },
    {
      "path": "../../libs/shared/types/tsconfig.lib.json"
    }
  ]
}
