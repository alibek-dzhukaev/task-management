{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@task-management/source"],
    "paths": {
      "@task-management/shared-types": ["libs/shared/types/src/index.ts"],
      "@task-management/database": ["libs/shared/database/src/index.ts"],
      "@task-management/cache": ["libs/shared/cache/src/index.ts"]
    }
  }
}
